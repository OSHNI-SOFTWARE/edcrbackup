<resources>

    <!-- Base application theme. -->
    <!--<stdayNumberdate="AppTheme" parent="android:Theme.Holo.Light">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <!--Custom styles-->

    <style name="AppTheme.PopupOverlay" />

    <!--style for main menu titles-->
    <style name="MainMenuText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--style for main menu icon-->
    <style name="MainMenuIcon">
        <item name="android:layout_width">@dimen/listIconWH</item>
        <item name="android:layout_height">@dimen/listIconWH</item>
    </style>

    <!--style for list item main text-->

    <style name="TextTitle">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color2</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="TextSpinner">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_gravity">left|center</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textColorHint">@color/offWhite</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextTitleTp">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="Headline">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextListSub">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/color2</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="HomeDate">
        <item name="android:layout_marginBottom">@dimen/_minus7sdp</item>
        <item name="android:textSize">@dimen/_50sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeMonth">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeDateToday">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HomeInfoRow">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HomeIconMini">
        <item name="android:layout_marginRight">@dimen/_2sdp</item>
    </style>

    <style name="RadioMorningEvening">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InputText">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color2</item>
    </style>

    <style name="ATextStatement">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color2</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/spinner_box</item>
        <item name="android:paddingLeft">@dimen/margin_left_right</item>
    </style>

    <style name="ATextTitleStatement">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/spinner_box</item>
        <item name="android:paddingLeft">@dimen/margin_left_right</item>
    </style>

    <style name="NiceSpinner">
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color2</item>
    </style>

    <style name="popupTitle">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <style name="popupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>


    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>


    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="simpletooltip_default" parent="@android:style/TextAppearance.Medium"></style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MainMenu" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
