<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bd.com.aristo.edcr.modules.dcr.dcr.activity.DCRActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_above="@+id/cardBottom">
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtAccompanyInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:text="No Accompany Added!!"
            android:gravity="center"
            android:textStyle="bold"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:tabMode="fixed"
            app:tabGravity="fill"/>
        <bd.com.aristo.edcr.utils.ui.collections.AViewPager
            android:id="@+id/dcr_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.35"
            android:layout_gravity="left" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/mycoordinate"
        android:layout_height="@dimen/_150sdp"
       
        android:layout_above="@id/cardBottom">
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llAbsent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivAbsent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_mini_absent"
                    android:scaleType="centerInside"
                    android:visibility="visible" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvAbsent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Absent"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDCR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivDCR"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_tab_home"
                    android:scaleType="centerInside"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtHome"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Home"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivSave"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_tab_save"
                    android:scaleType="centerInside"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvSave"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Save"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <!--<LinearLayout
                android:id="@+id/llUpload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivUpload"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_tab_upload"
                    android:scaleType="centerInside"/>
                <bd.com.squareit.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvUpload"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Upload"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>