<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="@dimen/_3sdp"
    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/_3sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDate"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:id="@+id/txtTotalDCR"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_9ssp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtSelected"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtSample"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="@dimen/_5sdp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/txtGift"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Shift"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DOT"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PLAN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DCR"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtMDot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtMPlan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtMNew"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtMAbsent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtMDCR"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtEDot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtEPlan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtENew"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtEAbsent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
            <TextView
                android:id="@+id/txtEDCR"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:padding="@dimen/_2sdp"
                android:textSize="@dimen/_9ssp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>