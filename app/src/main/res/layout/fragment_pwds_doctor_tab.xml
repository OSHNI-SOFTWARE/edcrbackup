<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp">
            <bd.com.aristo.edcr.utils.ui.texts.AnEditText
                android:id="@+id/etFilterDoctor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Search Doctors..." />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/llSearch"
            android:id="@+id/doctorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cardBottom" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/shaded_rect_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llSecond"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSecond"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_upload"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtSecond"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/upload"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivHome"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_home"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtHome"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Home"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFourth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivFourth"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_download"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtFourth"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/sync"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>
