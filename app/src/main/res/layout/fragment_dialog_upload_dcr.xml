<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Upload/Save DCR"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/color2"
            android:gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin"
        android:orientation="vertical">
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtAccompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_box"
            android:text="Accompany with: 1103"
            android:padding="@dimen/margin_left_right"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:gravity="left|top"
            android:textStyle="bold"/>
        <bd.com.aristo.edcr.utils.ui.texts.AnEditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_box"
            android:hint="Remarks"
            android:minLines="3"
            android:padding="@dimen/margin_left_right"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="left|top"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/vertical_margin"
        android:orientation="horizontal">
        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:background="@color/transparent"
            android:textColor="@color/red"/>

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:textAllCaps="false"
            android:background="@color/transparent"
            android:textColor="@color/color4"/>

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnUpload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Upload"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/color2"/>
    </LinearLayout>
</LinearLayout>