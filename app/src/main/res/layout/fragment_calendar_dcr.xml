<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <bd.com.aristo.edcr.utils.ui.texts.ATextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color2"
        android:gravity="start"
        android:text="DCR of February"/>
    <LinearLayout
        android:layout_below="@+id/tvTitle"
        android:id="@+id/llWeekDayTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:background="@color/color2"
        >
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/daySat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SA"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/daySun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SU"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/dayMon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MO"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/dayTue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="TU"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/dayWed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="WE"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/dayThu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="TH"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp" />
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/dayFri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="FR"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llWeekDayTitle">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv"/>

    </LinearLayout>


</RelativeLayout>