<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <bd.com.aristo.edcr.utils.ui.texts.ATextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="Other Bill"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/color2"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spBillType"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:padding="@dimen/margin_left_right"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"/>
        <bd.com.aristo.edcr.utils.ui.texts.AnEditText
            android:id="@+id/etAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:background="@drawable/spinner_box"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textColorHint="@color/black"
            android:layout_marginLeft="@dimen/_5sdp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">
        <bd.com.aristo.edcr.utils.ui.texts.AnEditText
            android:id="@+id/etRemarks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/spinner_box"
            android:hint="Remarks"
            android:maxLines="3"
            android:padding="@dimen/margin_left_right"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin"
        android:orientation="horizontal"
        android:gravity="right">
        <ImageView
            android:id="@+id/ivAttached"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_mini_attachment_found"
            android:layout_marginLeft="@dimen/_5sdp"
            android:scaleType="center"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtAttachmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_box"
            android:text="No Attachment"
            android:padding="@dimen/margin_left_right"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/vertical_margin"
        android:orientation="horizontal">
        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/red"
            android:textAllCaps="false"
            android:background="@color/transparent" />

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Bill"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/color2"
            android:textAllCaps="false"
            android:background="@color/transparent" />
    </LinearLayout>


</LinearLayout>