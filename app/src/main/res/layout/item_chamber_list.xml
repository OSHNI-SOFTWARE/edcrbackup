<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_left_right">

        <ImageView
            android:layout_gravity="top"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mini_hospital"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp" />

        <LinearLayout
            android:paddingLeft="@dimen/margin_left_right"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                style="@style/TextTitle"
                android:textStyle="bold"
                android:text="BSMMU"
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_mini_location"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    />
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                style="@style/TextListSub"
                android:id="@+id/txtAddress"
                android:text="FCPS, MBBS (Rajshahi)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_mini_contact"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtContact"
                    android:text="Head neck"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:textSize="15sp"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/shift"
                    android:text="Morning"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:textColor="@color/color1"
                    android:textSize="15sp"/>

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
