<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity"
    android:id="@+id/llContent"
    android:background="@color/bg_home"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:src="@drawable/mpo_cover" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:id="@+id/tvTodayDate"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13ssp"
                android:text="18-07-2023"
                android:textColor="#557288"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/tvUserName"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:text="Mr. Md. Moniruzzaman"
                android:textColor="#557288"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/tvDesignation"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:text="Sr. MIO"
                android:textColor="#557288"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/tvTerritoryName"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:text="Chuadanga-B"
                android:textColor="#557288"
                android:layout_gravity="end"/>
        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_minus35sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvMorningDCR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardBackgroundColor="@color/colorWhiteLime"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvMorningDCR"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Morning DCR"
                    android:textColor="@color/color2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_toEndOf="@+id/tvMorningDCR"
                    android:id="@+id/rlPbMD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ProgressBar
                        android:id="@+id/progressBarMD"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_shape"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="45"
                        android:progressDrawable="@drawable/circular_progress_bar_color2" />

                    <TextView
                        android:id="@+id/tvProgressMD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="5/7"
                        android:textColor="@color/color2"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvActionMorningDCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/button_round_circle"
                    android:padding="@dimen/_6sdp"
                    android:text="Send Morning DCR"
                    android:textColor="@color/color2"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEveningDCR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardBackgroundColor="@color/colorWhiteLime"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvEveningDCR"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:text="Evening DCR"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="#020079"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="14sp"/>

                <RelativeLayout
                    android:layout_toEndOf="@+id/tvEveningDCR"
                    android:id="@+id/rlPbED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ProgressBar
                        android:id="@+id/progressBarED"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_shape"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progress_bar_color5" />
                    <TextView
                        android:id="@+id/tvProgressED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="0/5"
                        android:textColor="#020079"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvActionEveningDCR"
                    android:text="Send Evening DCR"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#020079"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/button_round_circle"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/cvNewDCR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardBackgroundColor="@color/colorWhiteLime"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivNewDCR"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/ic_new"
                    android:padding="@dimen/_5sdp"/>

                <RelativeLayout
                    android:id="@+id/rlNewDCR"
                    android:layout_toRightOf="@+id/ivNewDCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true">

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/tvNewDCRCount"
                        android:text="123244"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/tvlblNewDCR"
                        android:layout_below="@+id/tvNewDCRCount"
                        android:text="New DCR"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>

                </RelativeLayout>

                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvActionNewDCR"
                    android:text="New DCR"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/button_round_circle"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDCR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardBackgroundColor="@color/colorWhiteLime"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivDCR"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/ic_dcr"
                    android:padding="@dimen/_5sdp"/>

                <RelativeLayout
                    android:id="@+id/rlDCR"
                    android:layout_toRightOf="@+id/ivDCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true">

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/tvDCRCount"
                        android:text="123244"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#8d431f"/>

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/tvlblDCR"
                        android:layout_below="@+id/tvDCRCount"
                        android:text="Total DCR"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>
                </RelativeLayout>

                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/tvActionDCRSummary"
                    android:text="DCR Summary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#8d431f"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/button_round_circle"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
