<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:padding="@dimen/margin_left_right">

        <LinearLayout
            android:paddingLeft="@dimen/_4sdp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/semi_blue"
            android:paddingBottom="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="SP1 khsdkf jknf"
                        android:id="@+id/name"
                        android:textColor="@color/red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:textSize="13sp"
                        android:id="@+id/rcvQtyTV"
                        android:text="Rcv. 23"
                        android:textStyle="bold"
                        android:textColor="@color/black_effective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:textSize="13sp"
                        android:id="@+id/planQtyTV"
                        android:text="Plan 30"
                        android:textStyle="bold"
                        android:textColor="@color/black_effective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:textSize="13sp"
                        android:id="@+id/executeQtyTV"
                        android:text="Exe. 30"
                        android:textStyle="bold"
                        android:textColor="@color/black_effective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:textSize="13sp"
                        android:id="@+id/balQtyTV"
                        android:text="Bal. 30"
                        android:textStyle="bold"
                        android:textColor="@color/black_effective"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/verticalRecyclerView"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>