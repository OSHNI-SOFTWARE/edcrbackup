<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right">
    <bd.com.aristo.edcr.utils.ui.texts.BTextView
        android:id="@+id/txtIsGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Given"
        android:textColor="@color/blue_grey_light"
        android:textSize="12sp"
        android:rotation="-45"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:weightSum="10"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_6sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="4.7"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    style="@style/TextTitle"
                    android:textStyle="bold"
                    android:text="Seclo Mups"
                    android:id="@+id/name"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_16sdp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:text="Total qty: 20"
                    android:id="@+id/allotted"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:padding="@dimen/_3sdp"
                    android:textStyle="bold"/>

                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:text="Plan : 5"
                    android:id="@+id/planed"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:padding="@dimen/_3sdp"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp">
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/balanced"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:gravity="center"
                android:text="Balance: 300"
                android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/llClick"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mini_minus"
                android:background="@color/red"/>
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/tvCount"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/red"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:src="@drawable/ic_mini_plus"
                android:background="@color/green"
                android:scaleType="fitXY"/>

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>