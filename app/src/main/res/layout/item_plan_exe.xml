<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="@dimen/_3sdp"
    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/_2sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:orientation="horizontal">
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/txtDoctorName"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dr. Abul Hasan[12365489]"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:padding="@dimen/_3sdp"
                android:textSize="16sp"/>

            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/txtDate"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="@dimen/_3sdp"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_6sdp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_3sdp"
                android:padding="@dimen/_3sdp">
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PLAN"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black_effective"
                    android:textStyle="bold"
                    android:textSize="12sp" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtPlanSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtPlanSample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/color2"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtPlanGift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/color4"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="@dimen/_3sdp">
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EXECUTION"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black_effective"
                    android:textStyle="bold"
                    android:textSize="12sp" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtExecutionSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtExecutionSample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:textColor="@color/color2"
                    android:textSize="14sp"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtExecutionGift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:textColor="@color/color4"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal">
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/txtShift"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textStyle="bold"
                android:textColor="@color/black_effective"
                android:padding="@dimen/_3sdp"
                android:textSize="16sp"/>
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/txtAccompany"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2535"
                android:textStyle="bold"
                android:textColor="@color/black_effective"
                android:padding="@dimen/_3sdp"
                android:textSize="16sp"/>
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/txtRemarks"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="plan in yesterday"
                android:gravity="end"
                android:textColor="@color/black_effective"
                android:padding="@dimen/_3sdp"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>