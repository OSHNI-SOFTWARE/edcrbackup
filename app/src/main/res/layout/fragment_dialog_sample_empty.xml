<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <bd.com.aristo.edcr.utils.ui.texts.ATextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="Product Empty"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/color2"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtMsg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/spinner_box"
            android:hint="There is no product, please sync!!"
            android:maxLines="3"
            android:padding="@dimen/margin_left_right"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/vertical_margin"
        android:orientation="horizontal">

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OK"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/color2"
            android:textAllCaps="false"
            android:background="@color/transparent" />
    </LinearLayout>


</LinearLayout>