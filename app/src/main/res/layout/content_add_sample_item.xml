<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bd.com.aristo.edcr.modules.dcr.dcr.fragment.AddSampleItemActivity"
    tools:showIn="@layout/activity_add_sample_item"
    android:orientation="vertical">

    <bd.com.aristo.edcr.utils.ui.texts.AnEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search"
        android:maxEms="10"
        android:background="@null"
        android:drawableLeft="@drawable/ic_tab_search"
        android:drawableTint="@color/gray"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
