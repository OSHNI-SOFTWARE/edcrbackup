<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNewDcr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_above="@+id/fabAdd"/>
    <LinearLayout
        android:id="@+id/fabAdd"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnExisting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Existing Doctor"
            android:textColor="@color/color2"
            android:textAllCaps="false"/>

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnNewDoctor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New Doctor"
            android:textColor="@color/color2"
            android:textAllCaps="false"/>

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnIntern"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Intern"
            android:textColor="@color/color2"
            android:textAllCaps="false"/>

        <bd.com.aristo.edcr.utils.ui.buttons.AButton
            android:id="@+id/btnOthers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Others"
            android:textColor="@color/color2"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>