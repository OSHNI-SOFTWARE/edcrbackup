<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llMonthTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            >
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/btnPrevMonth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textColor="@color/color2"
                android:textSize="20sp"
                android:text="DECEMBER"
                android:textStyle="bold"/>
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/txtCurrentMonth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="June"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:background="#ffffff"
                android:textStyle="bold"/>
            <bd.com.aristo.edcr.utils.ui.texts.ATextView
                android:id="@+id/btnNextMonth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:textColor="@color/color2"
                android:textSize="20sp"
                android:text="DECEMBER"
                android:textStyle="bold"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gwdsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llMonthTitle"
            android:layout_above="@+id/cardBottom"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:background="@drawable/shaded_rect_background">

                <LinearLayout
                    android:id="@+id/llSecond"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSecond"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_upload"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtSecond"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Upload"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_3sdp">
                    <ImageView
                        android:id="@+id/ivInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_info"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Color Info"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFourth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivFourth"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_download"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtFourth"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/sync"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>




</LinearLayout>
