<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:layout_margin="@dimen/vertical_margin">
        <bd.com.aristo.edcr.utils.ui.texts.AnEditText
            android:id="@+id/etFilterDoctor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="Search..." />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/doctorList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cardBottom"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal"
                android:background="@drawable/shaded_rect_background">
                <LinearLayout
                    android:id="@+id/llPrev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivPrev"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_prev"
                        android:scaleType="centerInside"
                        android:visibility="visible" />
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtPrev"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Prev."
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llSecond"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSecond"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_save"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtSecond"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Save"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llFourth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/ivFourth"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_save_next"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtFourth"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/btn_save_next"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llNext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivNext"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/ic_tab_next"
                        android:scaleType="centerInside"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtNext"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Next"
                        android:gravity="center"
                        android:textColor="@color/red"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>




</LinearLayout>
