<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llMonthTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        >
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtPrevMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="@color/color2"
            android:textSize="20sp"
            android:text=""
            android:textStyle="bold"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtCurrentMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:background="#ffffff"
            android:textStyle="bold"/>
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/txtNextMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:textColor="@color/color2"
            android:textSize="20sp"
            android:text=""
            android:textStyle="bold"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/llMonthTitle"
        android:layout_above="@+id/cardBottom"
        android:id="@+id/rvDoctors"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_tab_save"
                    android:scaleType="centerInside"
                    android:visibility="visible"
                    android:contentDescription="@string/save"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="@string/save"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llUpload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivSecond"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_tab_upload"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/upload"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtSecond"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="@string/upload"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_3sdp">
                <ImageView
                    android:id="@+id/ivInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_tab_info"
                    android:scaleType="centerInside"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:id="@+id/txtInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Color Info"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSync"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_tab_download"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/sync"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="@string/sync"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>