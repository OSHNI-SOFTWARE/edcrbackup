<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:layout_marginTop="@dimen/_2sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_left_right">
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:textStyle="bold"
            android:text=""
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color2"
            android:textSize="@dimen/_10ssp" />
        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:layout_below="@+id/name"
            android:id="@+id/txtItemFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue_grey_light"
            android:textSize="@dimen/_8ssp"/>

        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:id="@+id/tvCount"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/_10ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_25sdp" />
        <ImageView
            android:id="@+id/ivCheck"
            android:background="@color/color1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mini_plus"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/user_id" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivTick"
            android:background="@color/color1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mini_tick"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/user_id" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>