<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Doctor ID"
            android:padding="@dimen/_3sdp"
            android:id="@+id/doctorIdTV"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            style="@style/TextTitle"
            android:textStyle="bold"
            android:text="Doctor Name"
            android:padding="@dimen/_3sdp"
            android:id="@+id/name"
            android:layout_below="@+id/doctorIdTV"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="end"/>

        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:textStyle="bold"
            android:text="15-03-2018"
            android:id="@+id/executeDateTV"
            android:layout_below="@+id/name"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="@dimen/_3sdp"
            android:textColor="@color/red"/>

        <bd.com.aristo.edcr.utils.ui.texts.ATextView
            android:text="Exe qty: 20"
            android:id="@+id/rcvQtyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_6sdp"
            android:textSize="16sp"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/red_dark"/>
    </RelativeLayout>

    <!--<View-->
        <!--android:id="@+id/dividerLine"-->
        <!--android:layout_below="@id/topLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="@color/light_gray"-->
        <!--android:layout_marginTop="@dimen/_3sdp"/>-->


</RelativeLayout>