<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/llDoc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp">
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:textStyle="bold"
                    android:text="Abdul Karim [123456]"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/color2"
                    android:textSize="14sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/txtDotCountA"
                        android:text="A"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:textColor="@color/color4"
                        android:textStyle="bold"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountTitleB"
                        android:text="B"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:textColor="@color/color4"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textStyle="bold"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountTitleC"
                        android:text="C"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:textColor="@color/color4"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textStyle="bold"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountTitleD"
                        android:text="D"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:textColor="@color/color4"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_2sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountA"
                        android:text="4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp" />

                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountB"
                        android:text="4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_2sdp"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountC"
                        android:text="4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_2sdp"/>
                    <bd.com.aristo.edcr.utils.ui.texts.ATextView
                        android:id="@+id/dotCountD"
                        android:text="4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:padding="@dimen/_1sdp"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_2sdp"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemMarketDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shaded_rect_background">
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="G"
                    android:textColor="@color/color2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp" />
                <View
                    android:layout_width="25dp"
                    android:layout_height=".5dp"
                    android:background="@color/light_gray"/>
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="A"
                    android:textColor="@color/color2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="B"
                    android:textColor="@color/color2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="C"
                    android:textColor="@color/color2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp" />
                <bd.com.aristo.edcr.utils.ui.texts.ATextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="D"
                    android:textColor="@color/color2"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDot"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>